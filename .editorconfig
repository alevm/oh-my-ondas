root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{js,html,css}]
indent_style = space
indent_size = 4

[*.{yml,yaml,json}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.{ini,cfg}]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.{cpp,h,ino}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
